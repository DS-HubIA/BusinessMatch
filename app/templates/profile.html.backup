{% extends "base.html" %}

{% block title %}Perfil - Business Match{% endblock %}

{% block content %}
<div style="padding: 16px;">
    <!-- Header do Perfil (MVP original) -->
    <div style="text-align: center; padding: 20px 0;">
        <div style="width: 60px; height: 60px; border-radius: 50%; background: #2563eb; color: white; display: flex; align-items: center; justify-content: center; font-size: 20px; margin: 0 auto 12px;">
            {{ current_user.name[0] if current_user.name else 'U' }}
        </div>
        <h2 style="font-size: 18px; font-weight: bold; margin-bottom: 4px;">{{ current_user.name or 'User' }}</h2>
        <p style="color: #6b7280; font-size: 14px; margin-bottom: 16px;">{{ current_user.company or 'Empresa 1' }}</p>
        <a href="{{ url_for('main.edit_profile') }}" style="color: #2563eb; text-decoration: none; font-size: 14px;">
            Editar Perfil
        </a>
    </div>

    <!-- Negócios (estilo MVP original) -->
    {% if businesses %}
    <div style="margin-bottom: 24px;">
        {% for business in businesses %}
        <div style="background: white; border-radius: 8px; padding: 16px; margin-bottom: 12px;">
            <h3 style="font-size: 16px; font-weight: bold; margin-bottom: 8px; color: #1e293b;">
                {{ business.name }}
            </h3>
            
            <!-- Tags Oferta/Demanda -->
            <div style="display: flex; gap: 8px; margin-bottom: 12px;">
                {% if business.sells_products or business.sells_services %}
                <span style="background: #f1f5f9; color: #475569; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: bold;">
                    OFERTA - {{ business.business_sector }}
                </span>
                {% endif %}
                
                {% if business.buys_products or business.buys_services %}
                <span style="background: #f1f5f9; color: #475569; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: bold;">
                    DEMANDA - {{ business.business_sector }}
                </span>
                {% endif %}
            </div>
            
            <!-- Descrição resumida -->
            <p style="color: #64748b; font-size: 14px; line-height: 1.4;">
                {% if business.sells_products %}
                {{ business.sells_products }}
                {% elif business.sells_services %}
                {{ business.sells_services }}
                {% elif business.buys_products %}
                {{ business.buys_products }}
                {% elif business.buys_services %}
                {{ business.buys_services }}
                {% endif %}
            </p>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    <!-- Botão Adicionar Negócio -->
    <div style="text-align: center; margin-bottom: 24px;">
        <a href="{{ url_for('business.create_business') }}" style="display: inline-block; background: #2563eb; color: white; padding: 12px 24px; border-radius: 6px; text-decoration: none; font-weight: bold; font-size: 14px;">
            + Adicionar Negócio
        </a>
    </div>

    <!-- Área de Perigo (MVP original) -->
    <div style="background: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 20px;">
        <h3 style="color: #dc2626; font-size: 16px; font-weight: bold; margin-bottom: 8px;">
            Área de Perigo
        </h3>
        <p style="color: #6b7280; font-size: 14px; margin-bottom: 16px;">
            Ações nesta área são irreversíveis. Tenha certeza do que está fazendo.
        </p>
        
        <div style="display: flex; gap: 12px;">
            <a href="{{ url_for('auth.logout') }}" style="flex: 1; background: white; color: #2563eb; border: 1px solid #2563eb; padding: 12px; border-radius: 6px; text-decoration: none; text-align: center; font-weight: bold;">
                Sair
            </a>
            
            <form action="{{ url_for('auth.delete_account') }}" method="POST" 
                  onsubmit="return confirm('Tem certeza que deseja excluir sua conta permanentemente? Esta ação não pode ser desfeita.');"
                  style="flex: 1;">
                <button type="submit" style="width: 100%; background: #dc2626; color: white; border: none; padding: 12px; border-radius: 6px; font-weight: bold; cursor: pointer;">
                    Excluir Conta
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
